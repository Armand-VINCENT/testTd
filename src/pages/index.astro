        <li class="icon rounded border-1 border-gray-700 p-2">
          <GitLogo size={30} class="text-tertiary" />
        </li>
      </ul>
    </section>
    <hr class="my-4 border-t border-gray-700" />
    <section class="home__article decoration-grey-500 flex flex-col gap-2 p-1">
      <h1 class="mt-2 text-2xl font-bold">Latest Articles</h1>

